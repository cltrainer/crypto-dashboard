{
  "name": "crypto-dashboard",
  "description": "Crypto price list",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cltrainer/crypto-dashboard"
  },
  "homepage": "https://cltrainer.github.io/crypto-dashboard",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.8.0",
    "@mui/material": "^5.8.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^16.14.26",
    "@types/react-dom": "^16.9.16",
    "@types/react-virtualized": "^9.21.21",
    "d3-format": "^3.1.0",
    "d3-time-format": "^4.1.0",
    "gh-pages": "^4.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-financial-charts": "^0.5.1",
    "react-scripts": "5.0.1",
    "react-virtualized": "^9.22.3",
    "typescript": "^4.6.4",
    "use-color-change": "^1.0.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "format": "prettier --write src",
    "lint": "eslint --fix --ext .ts,.tsx src",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "jest":{
    "moduleNameMapper": {
      "d3-format": "<rootDir>/node_modules/d3-format/dist/d3-format.min.js",
      "d3-time-format": "<rootDir>/node_modules/d3-time-format/dist/d3-time-format.min.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-financial-charts)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/d3-format": "^3.0.1",
    "@types/d3-time-format": "^4.0.0",
    "@types/enzyme": "^3.10.12",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.16.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "rc": "^1.2.8"
  }
}
